<h4>Today shipments: <%= (Time.now - 5.hours).strftime('%m-%d-%y') %></h4>
<h5>Store number: <%= @store.id %> / Store name: <%= @store.name %></h5>

<h5>Shipment number: <%= @shipment.id %></h5>

<div class="row">
  <div class="col-md-8">

  </div>
  <div class="col-md-4">
    <%if @shipment.waiting? %>
        <div class="col-md-6">
          <%= button_to 'Delivered', deliver_store_shipment_path(@store,@shipment), class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
  </div>

</div>


<div class="row">
  <div class="col-md-8">
    <div class="well">
      <h4>Products</h4>
      <table class="table table-striped">
        <tr>
          <th>Number: </th>
          <th>Name: </th>
          <th>Price: </th>
          <th>Quantity: </th>
        </tr>
        <% @shipment.shipment_stores.each do |product_order| %>
            <tr>
              <td><%= product_order.product.id %></td>
              <td><%= product_order.product.name %></td>
              <td><%= product_order.product.price %></td>
              <td><%= product_order.quantity %></td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>